<script>
// Get the age from the user 
var age = Number(prompt("Please enter your age: "));

// The age conditions 
if (age < 18) {
    console.log("Sorry, you are not old enough to enter the venue.");
    alert("Sorry, you are not old enough to enter the venue.");
} 

else if(age < 21) {
    console.log("You can enter, but cannot drink.");
    alert("You can enter, but cannot drink.");
}

else if (age === 21) {
    console.log("Happy 21st birthday, my dear! Congrats! You can finally drink!");
    alert("Happy 21st birthday, my dear! Congrats! You can finally drink!")
}

else if (age > 40 ) {
    console.log("Glad that you are trying to be young again! ");
    alert("Glad that you are trying to be young again!")
}

else {
    console.log("Come on in. You can drink.");
    alert("Come on in. You can drink.");
}
</script>

